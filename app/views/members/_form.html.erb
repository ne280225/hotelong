
<table class="attr">
  
  <tr>
    <th><%= form.label :user_id %></th>
    <td><%= form.text_field :user_id %></td>
  </tr>
  <tr>
    <th><%= form.label :name, "お名前" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :tel, "お電話番号"%></th>
    <td><%= form.text_field :tel %></td>
  </tr>
  <tr>
  <tr>
    <th><%= form.label :address, "住所" %></th>
    <td><%= form.text_field :address %></td>
  </tr>
  <tr>
    <th><%= Member.human_attribute_name(:sex) %></th>
    <td>
      <%= form.radio_button :sex, 1 %>
      <%= form.label :sex_1,"男" %>
      <%= form.radio_button :sex, 2 %>
      <%= form.label :sexr_2,"女" %>
    </td>
  </tr>
  <tr>
    <th><%= form.label :birthday, "生年月日"%></th>
    <td><%= form.date_select :birthday,start_year: 1940, end_year: Time.now.year,use_month_numbers: true %></td>
  </tr>
  <tr>
    <th><%= form.label :email %></th>
    <td><%= form.text_field :email %></td>
  </tr>

  <tr>
    <th><%= form.label :password, "パスワード" %></th>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation, "パスワードの確認" %></th>
    <td><%= form.password_field :password_confirmation %></td>
  </tr>
</table>

<% unless @member.new_record? %>
<p>パスワードを変更しないときは、パスワード入力欄を空にしてください。</p>
<% end %>
